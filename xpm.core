targets:
  # The "default" target is special in FuseSoC and used in dependencies.
  # The "&default" is a YAML anchor referenced later.
  default: &default
    filesets:
      - xpm

  ghdl:
    <<: *default
    description: Run GHDL
    default_tool: ghdl
    toplevel: sim.xpm_fifo_ex
    filesets_append:
      - sim
    tools:
      ghdl:
        analyze_options: ""

